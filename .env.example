# Paperâ†’Code AI System - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ============================================================================
# LLM API Keys
# ============================================================================
# Anthropic Claude API key (required)
# Get from: https://console.anthropic.com/
CLAUDE_API_KEY=sk-ant-api03-your-key-here

# OpenAI API key (optional, for comparison/fallback)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-key-here

# ============================================================================
# LLM Configuration
# ============================================================================
# Default model to use
CLAUDE_MODEL=claude-sonnet-4-5-20250929
OPENAI_MODEL=gpt-4

# Temperature (0.0 = deterministic, 1.0 = creative)
DEFAULT_TEMPERATURE=0.0

# Max tokens per request
DEFAULT_MAX_TOKENS=4000

# ============================================================================
# Rate Limiting
# ============================================================================
# Claude rate limits (adjust based on your tier)
CLAUDE_REQUESTS_PER_MINUTE=50
CLAUDE_TOKENS_PER_MINUTE=100000

# OpenAI rate limits
OPENAI_REQUESTS_PER_MINUTE=60
OPENAI_TOKENS_PER_MINUTE=90000

# ============================================================================
# Cost Tracking
# ============================================================================
# Budget in USD (stop if exceeded)
API_BUDGET_USD=500.00

# Alert threshold (0.8 = alert at 80% of budget)
BUDGET_ALERT_THRESHOLD=0.8

# ============================================================================
# Caching
# ============================================================================
# Enable response caching
ENABLE_CACHE=true

# Cache TTL in seconds (86400 = 24 hours)
CACHE_TTL_SECONDS=86400

# Cache directory
CACHE_DIR=data/cache

# ============================================================================
# Logging
# ============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format: json or text
LOG_FORMAT=json

# Log directory
LOG_DIR=data/logs

# ============================================================================
# Pipeline Configuration
# ============================================================================
# Default output directory for pipeline runs
OUTPUT_DIR=data/outputs

# Dataset database path
DATASET_DB_PATH=data/datasets/paper_to_code.db

# ============================================================================
# Development Settings
# ============================================================================
# Environment: development, staging, production
ENVIRONMENT=development

# Enable debug mode (verbose logging, no caching)
DEBUG_MODE=false

# Dry run mode (no actual API calls, use cached/mock responses)
DRY_RUN=false

# ============================================================================
# Testing
# ============================================================================
# Use real API in integration tests (costs money!)
USE_REAL_API_IN_TESTS=false

# Test fixtures directory
TEST_FIXTURES_DIR=tests/fixtures

# ============================================================================
# Optional: External Services
# ============================================================================
# Sentry DSN for error tracking (optional)
# SENTRY_DSN=https://your-sentry-dsn-here

# Weights & Biases API key (optional, for experiment tracking)
# WANDB_API_KEY=your-wandb-key-here
